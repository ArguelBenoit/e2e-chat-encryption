{
  "manifest_version": 2,
  "name": "e2e-chat-encryption",
  "version": "1.0",

  "description": "End to end, chat encryption system",
  "homepage_url": "https://github.com/ArguelBenoit/e2e-chat-encryption",

  "permissions": [
    "activeTab"
  ],

  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "browser_action": {
    "default_icon": "icons/icon-96.png",
    "default_title": "e2e-chat-encryption",
    "default_popup": "public/index.html"
  },

  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ]
}
